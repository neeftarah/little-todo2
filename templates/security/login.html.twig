{% extends 'public.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <main class="form-signin w-100 m-auto">
        <form method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3">
                    Vous êtes identifié en tant que {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Déconnexion</a>
                </div>
            {% endif %}

            <h1 class="h3 mb-3 font-weight-normal">Connexion</h1>

            <div class="form-floating">
                <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control"
                       autocomplete="username" required autofocus placeholder="Nom d'utilisateur">
                <label for="inputUsername">Nom d'utilisateur</label>
            </div>

            <div class="form-floating">
                <input type="password" name="password" id="inputPassword" class="form-control"
                       autocomplete="current-password" required placeholder="********">
                <label for="inputPassword">Mot de passe</label>
            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <div class="form-check text-start my-3">
                <input class="form-check-input" type="checkbox" value="remember-me" id="flexCheckDefault">
                <label class="form-check-label" for="flexCheckDefault">
                    Remember me
                </label>
            </div>

            <button class="btn btn-primary w-100 py-2" type="submit">
                Connexion
            </button>

            <p class="text-end mt-3">
                <a href="{{ path('app_forgot_password_request') }}">Mot de passe oublié ?</a>
            </p>
        </form>
    </main>
{% endblock %}
